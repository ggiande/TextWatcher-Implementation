<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/hi_gian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:paddingTop="10dp"
        android:id="@+id/etMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greetings"
        android:layout_centerHorizontal="true"
        android:hint="@string/start_typing"
        android:autofillHints="true"
        android:inputType="text" />

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/tvInputPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMain"
        android:layout_centerInParent="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:text="@string/changing_input" />

    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInputPT"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        tools:ignore="RtlSymmetry" />


</RelativeLayout>